{
    "manifest_version": 3,
    "name": "YouTube Transcript Summarizer",
    "version": "1.0",
    "description": "Summarizes YouTube video transcripts using OpenAI's API",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }